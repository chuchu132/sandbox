<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF" >

    <RelativeLayout
        style="@style/AppTheme"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="5dp" >
        
           <ImageView
               android:id="@+id/item_preview"
               style="@style/AppTheme"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:adjustViewBounds="true"
               android:maxHeight="80dp"
               android:maxWidth="100dp"
               android:scaleType="centerInside"
               android:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/titulo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/item_preview"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Titulo muy largo para entrar en una sola filas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/apptheme_color" />

          <TextView
              android:id="@+id/subtitulo_item"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/titulo_item"
              android:layout_below="@+id/titulo_item"
              android:ellipsize="end"
              android:maxLines="3"
              android:text="Descripcion Corta Un poco mas larga sarasa dasa asda fakljada"
              android:textAppearance="?android:attr/textAppearanceMedium" />

          <TextView
              android:id="@+id/item_price"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:layout_marginTop="5dp"
              android:text="$100.000"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/apptheme_color"
              android:textStyle="bold" />

    </RelativeLayout>

  

</RelativeLayout>
