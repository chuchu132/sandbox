<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="ar.uba.fi.mileem.MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
         >

    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp" >

        <TextView
            android:id="@+id/subtitulo_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/app_name"
            android:textColor="@color/apptheme_color"
            android:textSize="45dp"
            android:typeface="sans" />

        <Spinner
            android:id="@+id/operation_type"
            style="@style/SpinnerAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />

        <Spinner
            android:id="@+id/property_type"
            style="@style/SpinnerAppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           
             />

         <Spinner
             android:id="@+id/neighborhood"
             style="@style/SpinnerAppTheme"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             />

         <CheckBox
             android:id="@+id/include_neighbors"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:button="@drawable/apptheme_btn_check_holo_light"
             android:text="@string/con_zonas"
             android:textColor="@color/apptheme_color"
             android:textSize="@dimen/mini_text" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal|center_vertical" >

             <Button
                 android:id="@+id/simple_search"
                 style="@style/ButtonAppTheme"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="0"
                 android:text="@string/simple_search"
                 android:textColor="@android:color/white" />

             <Button
                 android:id="@+id/advanced_search"
                 style="@style/ButtonAppTheme"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="0"
                 android:text="@string/advanced_search"
                 android:textColor="@android:color/white"
                 android:textSize="@dimen/mini_text" />

         </LinearLayout>

    </LinearLayout>
        
    </ScrollView>
</RelativeLayout>